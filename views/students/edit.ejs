<% include ../partials/boilerplate %>
<form class="editcard" method="POST" action="<%= `/students/${student.id}?_method=PUT` %>">
    <h1>Edit a student</h1>
    <div class="edit_form">
          <label  for="id">Student Id: </label>
          <span><%= student.id %></span>
    </div>
    <div class="edit_form">
          <label for="student_name">Name</label>
          <input id="student_name" type="text" name="student_name" value="<%= student.student_name %>" />
    </div>
    <div class="edit_form">
          <label  for="email">Email</label>
          <input id="email" type="text" name="email" value="<%= student.email %>" />
    </div>
    <div class="edit_form radio-group">
        <input type="radio" id="genderChoice1" name="gender" value="male" <%= (student.gender === 'male') ? "checked" : "" %> >
        <label for="genderChoice1">Male</label>
        <input type="radio" id="genderChoice2" name="gender" value="female" <%= (student.gender === 'female') ? "checked" : ""%> >
        <label for="genderChoice2">Female</label>
    </div>
    <div class="edit_form">
          <label  for="phone_number">Mobile #</label>
          <input id="phone_number" type="text" name="phone_number" value="<%= student.phone_number %>" />
    </div>

    <fieldset>
        <legend>Select Classes</legend>
        <% classes.forEach(classData => { %>
        <div>
            <input type="checkbox" id="<%= "class-" + classData.id %>" name="classes" value="<%= classData.id %>">
            <label for="<%= "class-" + classData.id %>"><%= classData.name %></label>
        </div>
        <% }) %>
    </fieldset>

    <div>
        <button class="btn">Save</button>
    </div>
    <div class="edit_form">
        <a class="link" href="<%= `/students/${student.id}` %>">Cancel</a>
    </div>
</form>

<% include ../partials/end %>

