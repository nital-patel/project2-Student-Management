<% include ../partials/boilerplate %>

<% students.forEach(student => { %>
<div class="student">

    <h4>
        <a href="<%= `/students/${student.id}` %>">
            <%= student.id %>
        </a>
        <div class="data">
        <br />
            <%= student.student_name %>
        <br />
            <%= student.email %>
        <br />
            <%= student.gender %>
        <br />
            <%= student.phone_number %>
        <br />
        <a href="/students/new">Add a student!</a>
        </div>
    </h4>

</div>
<% }) %>

<% include ../partials/end %>
